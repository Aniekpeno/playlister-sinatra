<div class="container">
<h1> Add Song</h1>
</br>
<form action="/edit/song_confirmation" method="POST" class="span3">
  <label>Name</label>
  <select type='text' name="name"><br>
      <% @artists.each do |artist| %>
        <option value="<%=artist.name%>"><%= artist.name%></option>
      <% end %>
  </select></br>
  <label>Song</label>
  <input type='text' name="song"><br>
  <label>Genre</label>
  <select type='text' name="genre"><br>
    <% @genres = Genre.all.sort_by { |g| g.name }%>
      <% @genres.each do |genre| %>
                <option value="<%=genre.name%>"><%= genre.name.capitalize%></option>
              <% end %>
  </select></br></br>
  <button class='btn btn-medium' type='submit' value='submit'>Submit</button><br>
</form>
</div>